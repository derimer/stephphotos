{
  "name": "@harmonia/server",
  "version": "1.0.0",
  "scripts": {
    "prepare": "[ -n \"$CI\" ] || husky install",
    "dev": "nodemon --ignore ./database/fixtures index.js",
    "db:migrate": "node ./bin/migrate.js",
    "db:seed": "node ./bin/seed.js",
    "build": "node ./bin/migrate.js",
    "start": "node index.js",
    "test": "jest",
    "find-circular-deps": "madge . -c"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.7",
    "nodemailer": "^6.9.15",
    "supertest": "^6.3.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.2.5",
    "supertest": "^7.0.0"
  },
  "lint-staged": {
    "*.sql": "prettier --check",
    "*.js": "eslint --report-unused-disable-directives"
  }
}
